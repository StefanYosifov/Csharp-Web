@model IEnumerable<PostViewModel>

@{
    ViewBag.Title = "All Posts";
}

<h2 class="text-center">@ViewBag.Title</h2>
<div class="d-grid gap-2 mb-2">
    <a asp-controller="Posts" asp-action="Add" class="btn">Add post</a>
</div>

@if(Model.Count()>0){
    foreach(var post in Model)
    {
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h4>@post.Title</h4>
                    <p>@post.Content</p>
                </div>
            </div>
        </div>
    }
}